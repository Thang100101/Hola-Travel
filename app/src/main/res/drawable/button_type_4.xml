<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="45"
                android:startColor="#1EAF21"
                android:endColor="#1EA6A6"
                ></gradient>
            <corners android:radius="40dp"
                ></corners>
            <stroke android:color="@color/teal_200"
                android:width="1dp"
                ></stroke>
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="45"
                android:startColor="#36FF39"
                android:endColor="#34FFFF"
                ></gradient>
            <corners android:radius="40dp"
                ></corners>
            <stroke android:color="@color/teal_200"
                android:width="1dp"
                ></stroke>
        </shape>
    </item>
</selector>